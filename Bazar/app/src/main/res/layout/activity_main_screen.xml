        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_defaultavatar"
        android:layout_marginTop="25dp"
        android:layout_marginRight="20dp"
        />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/mainScreen_closeBtn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_close"
        android:layout_marginTop="35dp"
        android:layout_marginRight="24dp"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/mainScreen_filterBtn"
        app:layout_constraintRight_toLeftOf="@+id/mainScreen_defaultAvatar"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_filter_colored"
        app:tint="@color/white"
        android:layout_marginTop="25dp"
        android:layout_marginRight="10dp"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/mainScreen_searchBtn"
        app:layout_constraintRight_toLeftOf="@+id/mainScreen_filterBtn"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_search"
        android:layout_marginTop="25dp"
        android:layout_marginRight="10dp"
        />-->
    <!--app:layout_constraintTop_toBottomOf="@+id/mainScreen_blackbckg"-->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/mainScreenFragmentContainerView"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/mainscreen_nav"
        tools:layout_editor_absoluteX="1dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_navigation_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/b_dark"
        app:itemTextColor="@color/c_white"
        app:itemIconTint="@color/c_white"
        app:itemRippleColor="@color/b_turquise"/>
</androidx.constraintlayout.widget.ConstraintLayout>