    <View
        android:id="@+id/mainScreen_blackbckg"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/mainScreen_backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_next_pagination"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        />

    <ImageView
        android:id="@+id/mainScreen_bazaar_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_bazaar_logo_coloured"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mainScreen_fragTitle"
        app:layout_constraintLeft_toRightOf="@+id/mainScreen_backBtn"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="22dp"
        android:text="Base Title"
        android:textColor="@color/white"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/mainScreen_defaultAvatar"
