<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.RegisterFragment"
    android:background="@color/login_black">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragReg_logo"
        android:src="@drawable/ic_bazaar_login_logo"
        android:layout_marginRight="3dp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/regFrag_logo"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragReg_logo"
        android:hint="First Name"/>

    <View
        android:id="@+id/fragLogin_secondBg"
        android:layout_width="350dp"
        android:layout_height="550dp"
        app:layout_constraintTop_toBottomOf="@id/fragReg_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/b_dark"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/regFrag_usernameET"
        app:layout_constraintTop_toBottomOf="@+id/regFrag_logo"
        android:hint="User Name"
        app:layout_constraintLeft_toLeftOf="@+id/fragLogin_secondBg"
        app:layout_constraintRight_toRightOf="@+id/fragLogin_secondBg"
        android:textColor="@color/white"
        android:textColorHint="@color/white"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/regFrag_emailET"
        app:layout_constraintTop_toBottomOf="@+id/regFrag_usernameET"
        android:hint="Email address"
        app:layout_constraintLeft_toLeftOf="@+id/fragLogin_secondBg"
        app:layout_constraintRight_toRightOf="@+id/fragLogin_secondBg"
        android:textColor="@color/white"
        android:textColorHint="@color/white"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/regFrag_passwET"
        app:layout_constraintTop_toBottomOf="@+id/regFrag_emailET"
        android:hint="Password"
        app:layout_constraintLeft_toLeftOf="@+id/fragLogin_secondBg"
        app:layout_constraintRight_toRightOf="@+id/fragLogin_secondBg"
        android:textColor="@color/white"
        android:textColorHint="@color/white"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/regFrag_regBtn"
        android:layout_marginTop="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/regFrag_passwET"
        android:text="Register"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/regFrag_textView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/regFrag_regBtn"
        android:text="Already have an account?"
        android:textSize="21dp"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/regFrag_logInBtn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/regFrag_textView"
        android:textSize="21dp"
        android:text="Log In"
        android:textColor="@color/teal_200"/>

</androidx.constraintlayout.widget.ConstraintLayout>