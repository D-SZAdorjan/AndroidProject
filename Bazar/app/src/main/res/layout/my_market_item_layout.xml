<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/fragMMitemlayout_ProductImage"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fragMMitemlayout_ProductPrice"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:src="@drawable/placeholder_image"/>
    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/fragMMitemlayout_ProductPrice"
        android:textSize="20dp"
        android:text="PRICE"
        style="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/fragMMitemlayout_ProductImage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/fragMMitemlayout_OwnerImage"
        android:layout_marginLeft="40dp"
        android:src="@drawable/avatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/fragMMitemlayout_ProductImage"
        app:layout_constraintBottom_toTopOf="@id/fragMMitemlayout_ProductName"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragMMitemlayout_OwnerName"
        android:text="User Name"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fragMMitemlayout_ProductName"
        app:layout_constraintLeft_toRightOf="@+id/fragMMitemlayout_OwnerImage"
        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/fragMMitemlayout_ProductName"
        android:text="Product Name"
        style="bold"
        android:textSize="20dp"
        android:layout_marginLeft="40dp"
        app:layout_constraintLeft_toRightOf="@id/fragMMitemlayout_ProductImage"
        app:layout_constraintTop_toBottomOf="@+id/fragMMitemlayout_OwnerImage"
        app:layout_constraintBottom_toBottomOf="@+id/fragMMitemlayout_active"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/fragMMitemlayout_active"
        android:textColor="@color/b_turquise"
        android:text="Active"
        style="bold"
        android:textSize="20dp"
        android:layout_marginLeft="40dp"
        app:layout_constraintLeft_toRightOf="@id/fragMMitemlayout_ProductImage"
        app:layout_constraintTop_toBottomOf="@+id/fragMMitemlayout_ProductName"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>