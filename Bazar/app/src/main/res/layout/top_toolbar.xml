<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/b_dark">

    <androidx.constraintlayout.widget.Group
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="mainScreen_backBtn, mainScreen_fragTitle"/>

    <ImageView
        android:id="@+id/mainScreen_backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_next_pagination"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mainScreen_fragTitle"
        android:textSize="22dp"
        android:text="Base Title"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/mainScreen_backBtn"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:id="@+id/mainScreen_bazaar_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_bazaar_logo_coloured"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        android:visibility="gone"/>

    <!--<ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/mainScreen_closeBtn"
        android:src="@drawable/ic_close"
        android:layout_marginTop="35dp"
        android:layout_marginRight="24dp"
        />-->

    <ImageView
        android:id="@+id/mainScreen_defaultAvatar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_defaultavatar"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintBottom_toBottomOf="@+id/mainScreen_filterBtn"
        app:layout_constraintTop_toTopOf="@+id/mainScreen_filterBtn"
        app:layout_constraintLeft_toRightOf="@id/mainScreen_filterBtn"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/mainScreen_filterBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_filter_colored"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/mainScreen_searchBtn"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toTopOf="@id/mainScreen_searchBtn"
        app:layout_constraintLeft_toRightOf="@id/mainScreen_searchBtn"
        app:layout_constraintRight_toLeftOf="@+id/mainScreen_defaultAvatar"
        app:tint="@color/white"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/mainScreen_searchBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_search"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintRight_toLeftOf="@id/mainScreen_filterBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>