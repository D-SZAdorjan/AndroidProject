<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.LoginFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uppber_B"
        android:src="@drawable/ic_upper_b_small"
        android:layout_marginRight="3dp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/azaar_text"
        app:layout_constraintHorizontal_chainStyle="packed"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_lower_b_small"
        android:layout_marginRight="3dp"
        app:layout_constraintTop_toBottomOf="@+id/uppber_B"
        app:layout_constraintRight_toLeftOf="@+id/azaar_text"
        app:layout_constraintHorizontal_chainStyle="packed"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/azaar_text"
        android:src="@drawable/ic_azaar"
        android:layout_marginTop="43dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/log_in_text"
            android:text="Log in"
            android:textSize="24dp"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintVertical_bias="0.3"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="User name"
            android:textColorHint="@color/white"
            android:id="@+id/user_name"
            app:layout_constraintTop_toBottomOf="@+id/log_in_text"
            android:textColor="@color/white"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textColorHint="@color/white"
            android:id="@+id/password"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/user_name"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sign_in_btn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/password"
            android:text="Log in"/>
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginFrag_rememberMe"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sign_in_btn"
        app:layout_constraintBottom_toBottomOf="@id/loginFrag_fpText"
        android:text="Remember me"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/loginFrag_fpText"
        app:layout_constraintTop_toBottomOf="@+id/loginFrag_rememberMe"
        android:text="ForgotPassword?"
        android:gravity="center"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/loginFrag_fpText"
        android:id="@+id/loginFrag_FPBtn"
        android:text="Click here!"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/teal_200"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginFrag_registerBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginFrag_FPBtn"
        android:text="Sign Up"
        />

</androidx.constraintlayout.widget.ConstraintLayout>